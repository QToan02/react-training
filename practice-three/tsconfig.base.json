{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@practice-three/modules/shared/services": ["modules/shared/services/src/index.ts"],
      "@practice-three/modules/shared/types": ["modules/shared/types/src/index.ts"],
      "@practice-three/modules/shared/ui": ["modules/shared/ui/src/index.ts"],
      "@practice-three/modules/shared/utils": ["modules/shared/utils/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
